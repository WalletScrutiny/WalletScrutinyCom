      {
        "appId": "{{ post.appId }}",
        "title": "{{ post.title }}",
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
  "bearer": {
    "category": "Bearer Token",
    "apps": [ 
      {% assign bearer = site.bearer | where: 'meta', 'ok' | where: 'verdict', 'reproducible' %}
      {% for post in bearer %}
