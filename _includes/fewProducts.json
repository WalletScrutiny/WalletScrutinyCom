      {% assign desktop = site.desktop | where: 'meta', 'ok' | where: 'verdict', 'reproducible' %}
      {% for post in desktop %}
      {% include wallet_score.html verdict = post.verdict platform='desktop' %}
      {
        "appId": "{{ post.appId }}",
        "title": "{{ post.title | escape }}",
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
  "others": {
    "category": "Others",
    "apps": [ 
      {% assign others = site.others | where: 'meta', 'ok' | where: 'verdict', 'reproducible' %}
      {% for post in others %}
      {
        "appId": "{{ post.appId }}",
        "title": "{{ post.title | escape }}",
        "icon": "{{ post.icon }}",
        "url": "{{ post.url }}"
