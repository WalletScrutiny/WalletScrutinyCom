      {
        "appId": "{{ post.appId }}",
        "title": "{{ post.title }}",
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
  "android": {
    "category": "Play Store",
