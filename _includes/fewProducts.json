        "appId": "{{ post.appId }}",
        "title": "{{ post.title | escape }}",
        "altTitle": "{{ post.altTitle }}",
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
  "desktop": {
    "category": "Desktop",
