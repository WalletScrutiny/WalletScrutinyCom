{
  "verdicts": {{ site.data.verdicts | jsonify }},
  "iphone": {
    "category": "App Store",
    "apps": [ 
      {% assign iphone = site.iphone | where: 'meta', 'ok' | where: 'verdict', 'reproducible' %}
      {% for post in iphone %}
      {% include wallet_score.html verdict = post.verdict platform='iphone' %}
      {
        "wsId": "{{ post.wsId }}",
        "appId": "{{ post.appId }}",
        "title": "{{ post.title | escape }}",      
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
  "hardware": {
    "category": "Hardware Wallet",
    "apps": [ 
      {% assign hardware = site.hardware | where: 'meta', 'ok' | where: 'verdict', 'reproducible' %}
      {% for post in hardware %}
