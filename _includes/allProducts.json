{
  "verdicts": {{ site.data.verdicts | jsonify }},
  "iphone": {
    "category": "App Store",
    "apps": [ 
      {% for post in site.iphone %}
      {% include wallet_score.html verdict = post.verdict meta = post.meta platform='iphone' %}
      {
        "wsId": "{{ post.wsId }}",
        "appId": "{{ post.appId }}",
        "title": "{{ post.title | escape }}",      
        "icon": "{{ post.icon }}",
        "meta": "{{ post.meta }}",
        "verdict": "{{ post.verdict }}",
        "url": "{{ post.url }}",
        "score": {numerator:{{ count }}, denominator:{{ criteria.size }}}
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  },
